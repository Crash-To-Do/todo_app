<h1>ToDos!</h1>

<%= form_for @todo do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :due_at %>
  <%= f.datetime_select :due_at %>

  <%= f.hidden_field :order, value: "#{@set_order}", id: "order"  %>

  <%= f.submit "Create ToDo" %>
<% end %>
