<table class="table table-bordered table-striped" id="sortable">
  <thead>
    <tr>
      <th>
        Title
      </th>
      <th>
        Description
      </th>
    </tr>
  </thead>
  <tbody>
    <% @todos.each do |todo| %>
      <tr data-item-id=<%= "#{todo.id}" %> class="item">
        <td>
          <h3><%= todo.title %></h3>
          <%= form_for todo do |f|%>
            <%= f.hidden_field :id, class: "rails-id" %>
            <%=f.check_box :complete, class: "to-do-complete" %>
            <% end %>
          <p><%= todo.description %></p>
          <p><%= todo.category %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
