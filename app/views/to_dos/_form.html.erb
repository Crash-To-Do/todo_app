<div id = "new-form">
  <%= form_for @todo do |f| %>
    <%= f.hidden_field :user_id, :value=> current_user.id %><br>

    <%= f.text_field :title, placeholder: "Title" %><br>

    <%= f.text_area :description, placeholder: "Description" %><br>

    <%= f.text_field :category, placeholder: "Category" %><br>

    <%= f.datetime_select :due_at, placeholder: "Due At", ampm: true, include_blank: true  %>

    <%= f.submit "Create ToDo" %>
  <% end %>
</div>
